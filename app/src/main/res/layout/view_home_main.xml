<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.home.MainActivity"
    android:background="@color/white"
    android:id="@+id/home_main_view">
    <com.google.android.material.appbar.AppBarLayout
        android:background="@color/white"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/home_head_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:fadingEdge="vertical"
                android:fadingEdgeLength="1000dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg1"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.9" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/clock_id"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/view_home_apps"/>
                <include layout="@layout/view_home_clock"/>
                <include layout="@layout/view_home_everyday_philosophy"/>
                <include layout="@layout/view_home_funny_thing"/>
                <include layout="@layout/view_home_note"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.Toolbar
        android:paddingTop="23dp"
        app:layout_behavior=".behavior.HomeToolBarBehavior"
        android:fitsSystemWindows="true"
        app:layout_anchor="@id/home_head_img"
        android:id="@+id/home_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <FrameLayout
            android:id="@+id/home_drawer_menu_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_gravity="center|left|bottom"
                android:id="@+id/home_drawer_menu"
                android:src="@drawable/menu"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_gravity="center|right"
                android:id="@+id/home_refresh_img"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        app:layout_behavior=".behavior.HeadTitleBehavoir"
        android:layout_marginTop="88dp"
        app:layout_anchor="@id/home_head_img"
        android:layout_marginLeft="20dp"
        android:layout_gravity="top|left"
        android:id="@+id/header_text"
        android:text="@string/app_name"
        android:textSize="35dp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/weather"
        app:layout_behavior=".behavior.WeatherBehavior"
        app:layout_anchorGravity="right"
        app:layout_anchor="@id/home_head_img"
        android:layout_marginRight="40dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="88dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/weather_default"
            android:id="@+id/weather_img"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/weather_des"
            android:layout_marginTop="10dp"
            android:text="@string/not_available"
            android:textAllCaps="false"
            android:layout_gravity="bottom|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>